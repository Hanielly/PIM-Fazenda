@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Detalhes do Gráfico - Tech Farm System</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@700&family=Raleway:wght@700&display=swap" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        body {
            font-family: 'Montserrat', sans-serif;
        }

        .faixa-azul {
            background-color: #007bff;
            padding: 4px 20px;
            text-align: left;
            position: relative;
            display: flex;
            flex-direction: column;
            justify-content: center;
            height: 50px;
        }

            .faixa-azul h2 {
                color: #EFC123;
                font-family: 'Montserrat', sans-serif;
                font-weight: bold;
                text-shadow: 1px 1px 2px #000;
                margin: 0;
                font-size: 20px;
            }

            .faixa-azul p {
                color: #EFC123;
                font-family: 'Montserrat', sans-serif;
                font-weight: bold;
                text-shadow: 1px 1px 2px #000;
                margin: 5px 0 0 0;
                font-size: 14px;
            }

        .linha-amarela {
            background-color: #EFC123;
            height: 5px;
            position: absolute;
            top: 100%;
            left: 0;
            right: 0;
        }

        .container {
            max-width: 1200px;
            margin: 50px auto;
            text-align: center;
            background-color: rgba(255, 255, 255, 0.8);
            border-radius: 10px;
            padding: 20px;
        }

        .grafico-container {
            margin-top: 30px;
            max-width: 800px;
            height: auto;
            margin-left: auto;
            margin-right: auto;
        }

        #graficoProducao {
            width: 100%;
            height: 400px; /* Ajustando altura do gráfico de Produção */
        }

        .faixa-titulo {
            background-color: rgba(255, 204, 77, 0.9);
            padding: 10px;
            border-radius: 5px;
            margin-bottom: 20px;
        }

        .card-custom {
            background-color: #e6f0ff; /* Azul claro do Menu */
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            margin-bottom: 30px;
        }

        h2 {
            font-family: 'Raleway', sans-serif;
            font-weight: bold;
            color: #000;
            margin: 0;
            text-transform: uppercase;
        }
    </style>
</head>
<body>

    <div class="faixa-azul">
        <h2>TECH FARM SYSTEM</h2>
        <p>Você está logado como: Administrador</p>
        <div class="linha-amarela"></div>
    </div>

    <div class="container card-custom">
        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">

                <div class="carousel-item active">
                    <div class="faixa-titulo">
                        <h2>GRÁFICO DE DESEMPENHO DOS GRÃOS - PRODUÇÃO</h2>
                    </div>
                    <div class="grafico-container">
                        <canvas id="graficoProducao"></canvas>
                    </div>
                </div>

                <div class="carousel-item">
                    <div class="faixa-titulo">
                        <h2>GRÁFICO DE DESEMPENHO DOS GRÃOS - ESTOQUE</h2>
                    </div>
                    <div class="grafico-container">
                        <canvas id="graficoEstoque"></canvas>
                    </div>
                </div>

                <div class="carousel-item">
                    <div class="faixa-titulo">
                        <h2>GRÁFICO DE DESEMPENHO DOS GRÃOS - VENDAS</h2>
                    </div>
                    <div class="grafico-container">
                        <canvas id="graficoVendas"></canvas>
                    </div>
                </div>

            </div>
            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Anterior</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Próximo</span>
            </a>
        </div>
    </div>

    <script>
        // Gráfico de Produção
        var ctxProducao = document.getElementById('graficoProducao').getContext('2d');
        var graficoProducao = new Chart(ctxProducao, {
            type: 'bar',
            data: {
                labels: ['Milho', 'Soja', 'Arroz', 'Trigo'],
                datasets: [{
                    label: 'Produção (KG)',
                    data: [4300, 3800, 5000, 6000],
                    backgroundColor: 'rgba(54, 162, 235, 0.6)',
                    borderColor: 'rgba(54, 162, 235, 1)',
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });

        // Gráfico de Estoque
        var ctxEstoque = document.getElementById('graficoEstoque').getContext('2d');
        var graficoEstoque = new Chart(ctxEstoque, {
            type: 'bar',
            data: {
                labels: ['Milho', 'Soja', 'Arroz', 'Trigo'],
                datasets: [{
                    label: 'Estoque (KG)',
                    data: [2500, 4000, 3200, 5500],
                    backgroundColor: 'rgba(255, 159, 64, 0.6)',
                    borderColor: 'rgba(255, 159, 64, 1)',
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });

        // Gráfico de Vendas
        var ctxVendas = document.getElementById('graficoVendas').getContext('2d');
        var graficoVendas = new Chart(ctxVendas, {
            type: 'bar',
            data: {
                labels: ['Milho', 'Soja', 'Arroz', 'Trigo'],
                datasets: [{
                    label: 'Vendas (R$)',
                    data: [7000, 9500, 8000, 10000],
                    backgroundColor: 'rgba(75, 192, 192, 0.6)',
                    borderColor: 'rgba(75, 192, 192, 1)',
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
    </script>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
