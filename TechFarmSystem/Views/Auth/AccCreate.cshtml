@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Criar Conta - Tech Farm</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@700&display=swap" rel="stylesheet">
    <style>
        .faixa-azul {
            background-color: #007bff;
            padding: 4px 0;
            text-align: center;
        }

            .faixa-azul h2 {
                color: #EFC123;
                font-family: 'Montserrat', sans-serif;
                font-weight: bold;
                text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
                text-transform: uppercase;
                font-size: 20px;
                margin-bottom: 0;
            }

            .faixa-azul p {
                color: #EFC123;
                font-family: 'Montserrat', sans-serif;
                font-weight: bold;
                text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
                font-size: 14px;
                text-transform: capitalize;
                margin-top: 0;
            }

        body {
            background-image: url('https://images.pexels.com/photos/1094544/pexels-photo-1094544.jpeg');
            background-size: cover;
            background-position: center;
        }

        .container {
            max-width: 500px;
            background-color: rgba(255, 255, 255, 0.9);
            padding: 30px;
            border-radius: 10px;
            margin-top: 100px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .title-border {
            border: 2px solid gray; /* Altere a cor para cinza */
            padding: 10px;
            border-radius: 5px;
            margin-bottom: 20px;
            text-align: center;
        }

        .btn-yellow {
            background-color: #EFC123;
            border: none;
            color: white;
            font-size: 16px;
            padding: 10px 20px;
            width: 100%;
        }

            .btn-yellow:hover {
                background-color: #d4a41d;
            }
    </style>
</head>
<body>

    <div class="faixa-azul">
        <h2>BEM-VINDO AO TECH FARM SYSTEM</h2>
        <p>Tecnologia e Sustentabilidade Para o Seu Negócio</p>
    </div>

    <div class="container mt-5">
        <div class="title-border">
            <h2>Criar Nova Conta</h2>
        </div>

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">
                @TempData["ErrorMessage"]
            </div>
        }

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">
                @TempData["SuccessMessage"]
            </div>
        }

        <form method="post" action="@Url.Action("Register", "Auth")">
            <div class="form-group">
                <label for="nome">Nome</label>
                <input type="text" class="form-control" id="nome" name="Nome" placeholder="Digite seu nome" required>
            </div>
            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" class="form-control" id="email" name="Email" placeholder="Digite seu email" required>
            </div>
            <div class="form-group">
                <label for="senha">Senha</label>
                <input type="password" class="form-control" id="senha" name="Senha" placeholder="Digite sua senha" required>
            </div>
            <button type="submit" class="btn btn-yellow btn-block">Criar Conta</button>
        </form>
    </div>

</body>
</html>
